<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bordercard"
    android:layout_gravity="center_horizontal|center_vertical"
    tools:context=".ProveedorDialog">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="DETALLES DEL PROVEEDOR"
            android:textColor="@color/black"
            android:textStyle="bold"></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:text="Nombre"
                android:textStyle="bold"
                android:layout_marginTop="0dp"></TextView>

            <TextView
                android:id="@+id/proveedor_detail_nombre"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="dato"
                android:textColor="@color/black"
                android:layout_marginTop="0dp"></TextView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_weight="8"
                android:gravity="center_horizontal"
                android:text="RUC"
                android:textColor="@color/black"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/proveedor_detail_ruc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                android:text="dato"
                android:textColor="@color/black"></TextView>
        </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_weight="8"
        android:layout_marginStart="5dp"
        android:gravity="center_horizontal"
        android:text="Estado"
        android:textColor="@color/black"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/proveedor_detail_estado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_weight="2"
        android:layout_marginStart="0dp"
        android:gravity="center_horizontal"
        android:text="dato"
        android:textColor="@color/black"></TextView>
</LinearLayout>
        <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center_horizontal"
           android:layout_weight="10"
           android:textColor="@color/black"
           android:layout_marginStart="0dp"
           android:text="Direccion"
           android:textStyle="bold"
           android:layout_marginTop="0dp"></TextView>
       <TextView
           android:id="@+id/proveedor_detail_direccion"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center_horizontal"
           android:layout_weight="3"
           android:textColor="@color/black"
           android:layout_marginStart="0dp"
           android:text="dato"
           android:layout_marginTop="0dp"></TextView>

   </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_weight="10"
                android:textColor="@color/black"
                android:layout_marginStart="0dp"
                android:text="Contacto"
                android:textStyle="bold"
                android:layout_marginTop="0dp"></TextView>
            <TextView
                android:id="@+id/proveedor_detail_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_weight="3"
                android:textColor="@color/black"
                android:layout_marginStart="0dp"
                android:text="dato"
                android:layout_marginTop="0dp"></TextView>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>