<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="10dp"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bordercard"
        android:orientation="horizontal"
        android:padding="5dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/CVP_ruc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="0dp"
                android:text="RUC"
                android:textSize="15sp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/CVP_Rsocial"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="20dp"
                android:text="Razon social"
                android:textSize="13sp"
                android:textStyle=""></TextView>


            <TextView
                android:id="@+id/deleteP"
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:background="@drawable/ic_baseline_remove_red_eye_24"
                android:textSize="40sp"

                android:textStyle="bold"></TextView>

        </RelativeLayout>
    </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>