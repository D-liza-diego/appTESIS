<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                xmlns:tools="http://schemas.android.com/tools"
                android:background="@drawable/bordercard"
                android:layout_gravity="center_horizontal|center_vertical"
                tools:context=".ProveedorDialog">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="DETALLES DE LA VENTA"
                android:textColor="@color/black"
                android:textStyle="bold"></TextView>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:text="Fecha"
                    android:textStyle="bold"
                    android:layout_marginTop="0dp"></TextView>

            <TextView
                    android:id="@+id/sales_detail_date"
                    android:layout_weight="5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="dato"
                    android:textColor="@color/black"
                    android:layout_marginTop="0dp"></TextView>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:text="Cliente"
                    android:textStyle="bold"
                    android:layout_marginTop="0dp"></TextView>

            <TextView
                    android:id="@+id/sales_detail_client"
                    android:layout_weight="5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="dato"
                    android:textColor="@color/black"
                    android:layout_marginTop="0dp"></TextView>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:text="Atendido por"
                    android:textStyle="bold"
                    android:layout_marginTop="0dp"></TextView>

            <TextView
                    android:id="@+id/sales_detail_user"
                    android:layout_weight="5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="dato"
                    android:textColor="@color/black"
                    android:layout_marginTop="0dp"></TextView>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:text="Estado"
                    android:textStyle="bold"
                    android:layout_marginTop="0dp"></TextView>

            <TextView
                    android:id="@+id/sales_detail_estado"
                    android:layout_weight="5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="dato"
                    android:textColor="@color/black"
                    android:layout_marginTop="0dp"></TextView>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:text="Comprobante"
                    android:textStyle="bold"
                    android:layout_marginTop="0dp"></TextView>

            <TextView
                    android:id="@+id/sales_detail_voucher"
                    android:layout_weight="5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="dato"
                    android:textColor="@color/black"
                    android:layout_marginTop="0dp"></TextView>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="8.5"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:text="Cantidad"
                    android:textStyle="bold"
                    android:layout_marginTop="0dp"></TextView>

            <TextView
                    android:id="@+id/sales_detail_items"
                    android:layout_weight="10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="dato"
                    android:textColor="@color/black"
                    android:layout_marginTop="0dp"></TextView>
            <TextView
                    android:id="@+id/sales_detail_ver"
                    android:layout_weight="10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text=" (Ver)"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="0dp"></TextView>


        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:text="Total"
                    android:textStyle="bold"
                    android:layout_marginTop="0dp"></TextView>

            <TextView
                    android:id="@+id/sales_detail_total"
                    android:layout_weight="5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="dato"
                    android:textColor="@color/black"
                    android:layout_marginTop="0dp"></TextView>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>